  <h2>Resultado:</h2>

  <div id="resultado">

    </div>



  <script>

    function calcularMedia() {



      const nome = document.getElementById('nomeAluno').value.trim();

      const nota1Str = document.getElementById('nota1').value;

      const nota2Str = document.getElementById('nota2').value;

      const nota3Str = document.getElementById('nota3').value;

      const resultadoDiv = document.getElementById('resultado');



      if (!nome || !nota1Str || !nota2Str || !nota3Str) {

        alert("Erro: Por favor, preencha todos os campos.");

        resultadoDiv.innerHTML = '<p style="color: red;">üö® Preencha todos os dados para realizar o c√°lculo.</p>';

        return;

      }



      const nota1 = parseFloat(nota1Str);

      const nota2 = parseFloat(nota2Str);

      const nota3 = parseFloat(nota3Str);



      if (isNaN(nota1) || isNaN(nota2) || isNaN(nota3) || nota1 < 0 || nota1 > 10) {

         alert("Erro: As notas devem ser n√∫meros entre 0 e 10.");

         resultadoDiv.innerHTML = '<p style="color: red;">üö® Notas inv√°lidas. Verifique se est√£o entre 0 e 10.</p>';

         return;

      }



      const media = (nota1 + nota2 + nota3) / 3;



      const mediaFormatada = media.toFixed(2);



      let situacao = '';

      let cor = 'black';



      if (media < 4) {

        situacao = 'Reprovado';

        cor = 'red';

      } else if (media < 6) {

        situacao = 'Recupera√ß√£o';

        cor = 'orange';

      } else {

        situacao = 'Aprovado';

        cor = 'green';

      }



      resultadoDiv.innerHTML = `

        <p><strong>Nome:</strong> ${nome}</p>

        <p><strong>M√©dia Final:</strong> ${mediaFormatada}</p>

        <p><strong>Situa√ß√£o:</strong> <span style="font-weight: bold; color: ${cor};">${situacao}</span></p>

      `;

    }

  </script>



